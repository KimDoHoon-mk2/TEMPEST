<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/startpage_layout0"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <TextView
            android:id="@+id/startpage_textview0"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="T"
            android:textColor="@android:color/black"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/startpage_textview1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="E"
            android:textColor="@android:color/black"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/startpage_textview2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="M"
            android:textColor="@android:color/black"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/startpage_textview3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="P"
            android:textColor="@android:color/black"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/startpage_textview4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="E"
            android:textColor="@android:color/black"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/startpage_textview5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="S"
            android:textColor="@android:color/black"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/startpage_textview6"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="T"
            android:textColor="@android:color/black"
            android:textSize="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/startpage_layout1"
        android:layout_width="220dp"
        android:layout_height="3dp"
        android:background="@android:color/black"
        android:layout_alignBottom="@id/startpage_layout0"
        android:orientation="vertical"
        android:transformPivotY="0dp"/>

</RelativeLayout>