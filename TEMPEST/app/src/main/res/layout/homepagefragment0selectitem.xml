<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:id="@+id/homepagefragment0selectitem_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/white">

            <TextView
                    android:id="@+id/homepagefragment0selectitem_textview0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="25dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/homepagefragment0selectitem_textview1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:gravity="center"
                android:text="사용중"
                android:textColor="@android:color/black"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/homepagefragment0selectitem_button"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/btn_design0"
                android:text="사용가능"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>